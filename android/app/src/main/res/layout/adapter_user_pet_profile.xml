<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBreedInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvBreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/rlBreedHeaderViewCollapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPet"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:contentDescription="left image"
                android:src="@drawable/walk_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/checkBox"
                android:layout_toRightOf="@+id/ivPet"
                android:orientation="vertical">

                <com.samyotech.petstand.utils.CustomTextView
                    android:id="@+id/tvPetName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Breed"
                    android:textColor="@color/inset"
                    android:textSize="16sp" />

                <com.samyotech.petstand.utils.CustomTextView
                    android:id="@+id/tvBreedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfvgfdcd"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>