<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:elevation="5dp"
        android:focusable="false"
        android:visibility="visible"
        android:background="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivOne"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/walk_icon" />

            </LinearLayout>


            <ImageView
                android:id="@+id/indicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/rederror" />

            <com.samyotech.petstand.utils.CustomTextView
                android:id="@+id/reminder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/llImg"
                android:text="dssdfsdf"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.samyotech.petstand.utils.CustomTextView
                android:id="@+id/tvDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/reminder_name"
                android:background="@drawable/rectangle_rounded_blue_green"
                android:gravity="center"
                android:inputType="textCapSentences"
                android:padding="5dp"
                android:text="dssdfsdf"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <com.samyotech.petstand.utils.CustomTextView
                android:id="@+id/tvDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reminder_name"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/llImg"
                android:text="dssdfsdf"
                android:textSize="12sp" />

            <com.samyotech.petstand.utils.CustomTextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate1"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/llImg"
                android:text="dssdfsdf"
                android:textColor="@color/default_chart_value_color"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
