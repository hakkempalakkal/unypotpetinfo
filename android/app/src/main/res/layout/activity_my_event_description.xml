<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.event.OtherEventDescriptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvevent"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/IVEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bird" />

                <ImageView
                    android:id="@+id/ivChange"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_action_camera_light"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="200dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <com.samyotech.petstand.utils.CustomTextViewBold
                        android:id="@+id/CTVBheader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Event"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                    <com.samyotech.petstand.utils.CustomTextView
                        android:id="@+id/CTVDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@drawable/ic_time"
                        android:drawablePadding="10dp"
                        android:text="26 sep 2018"
                        android:textColor="@color/text_color_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <com.samyotech.petstand.utils.CustomTextView
                            android:id="@+id/CTVaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/CTVpettype"
                            android:drawableLeft="@drawable/ic_event_placeholder"
                            android:drawablePadding="10dp"
                            android:text=""
                            android:textColor="@color/text_color_gray" />

                        <com.samyotech.petstand.utils.CustomTextView
                            android:id="@+id/CTVpettype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp"
                            android:drawableLeft="@drawable/pet_type"
                            android:drawablePadding="10dp"
                            android:text="dog"
                            android:textColor="@color/text_color_gray" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/header"
                                card_view:cardCornerRadius="0dp"
                                card_view:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <com.samyotech.petstand.utils.CustomTextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Description"
                                        android:textColor="@color/text_color_gray"
                                        android:textSize="20dp" />

                                    <com.samyotech.petstand.utils.CustomTextView
                                        android:id="@+id/CTVdescription"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text=""
                                        android:textColor="@color/text_color_gray"
                                        android:textSize="14dp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/Cardfunction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/header"
                                android:layout_marginTop="10dp"
                                card_view:cardCornerRadius="0dp"
                                card_view:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <com.samyotech.petstand.utils.CustomTextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pepole Joined"
                                        android:textColor="@color/text_color_gray"
                                        android:textSize="20dp" />


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvJoinedList"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"></androidx.recyclerview.widget.RecyclerView>


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                    <com.samyotech.petstand.utils.CustomButton

                        android:id="@+id/CBShowevent"
                        android:layout_width="307dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/gradiant_button2"
                        android:text="Show all"
                        android:textColor="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_back"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/IVedit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/IVdelete"
            android:background="@drawable/background_trans"
            android:padding="10dp"
            android:src="@drawable/edit"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/IVdelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_trans"
            android:padding="10dp"
            android:src="@drawable/delete2"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>